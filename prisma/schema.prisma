generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// ENUMS
// =========================
enum UserType {
  applicant
  company
  admin
}

enum CompanySize {
  SIZE_1_10
  SIZE_10_50
  SIZE_50_100
  SIZE_100_PLUS
}

enum JobStatus {
  applied
  shortlisted
  hired
}

// =========================
// USER MODEL
// =========================
model Auth {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  user_type UserType @default(applicant)
  user_id   String?
}

// =========================
// COMPANY MODEL
// =========================
model Company {
  id            String       @id @default(uuid())
  name          String
  email         String
  founding_year Int
  company_type  String
  contact_no    String
  website       String?
  address       String
  size          CompanySize?
  bio           String?

  jobs Job[]
}

// =========================
// APPLICANT MODEL
// =========================
model Applicant {
  id                   String  @id @default(uuid())
  name                 String
  mobile               String?
  email                String  @unique
  profile_pic          String?
  bio                  String?
  college_name         String?
  college_branch       String?
  college_joining_year String?

  appliedJobs AppliedJob[]
}

// =========================
// APPLIED JOB MODEL (replaces embedded type)
// =========================
model AppliedJob {
  id           String    @id @default(uuid())
  applicant    Applicant @relation(fields: [applicant_id], references: [id])
  applicant_id String

  job   Job    @relation(fields: [jobId], references: [id])
  jobId String

  status JobStatus @default(applied)
}

// =========================
// JOB MODEL
// =========================
model Job {
  id         String  @id @default(uuid())
  company_id String
  company    Company @relation(fields: [company_id], references: [id])

  job_role        String
  description     String
  ctc             Float
  stipend         Float
  location        String
  skills_required Json

  applied_jobs AppliedJob[]
}
